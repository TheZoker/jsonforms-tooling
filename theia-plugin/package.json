{
  "name": "jsonforms-tooling-theia",
  "displayName": "JSONForms Tooling",
  "description": "Extension for the VS Code editor to support JSONForms Tooling, making it easier for developers to start new project or try out the library.",
  "version": "0.0.1",
  "publisher": "EclipseSource",
  "license": "MIT",
  "keywords": [
    "theia-plugin"
  ],
  "files": [
    "src"
  ],
  "dependencies": {
    "jsonforms-tooling-common": "file:../jsonforms-tooling-common"
  },
  "devDependencies": {
    "@theia/plugin": "0.4.0-next.811ac888",
    "@theia/plugin-packager": "0.0.1-1539891078",
    "@types/node": "^10.12.10",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "jest": "^21.3.0-beta.15",
    "rimraf": "2.6.2",
    "typescript": "^3.1.6"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf out",
    "watch": "tsc -watch",
    "compile": "tsc -p ./",
    "build": "yarn run compile && theia:plugin pack",
    "postinstall": " ",
    "test": "jest",
    "custominstall": "yarn install && yarn run fixlink",
    "fixlink": "npm link ../jsonforms-tooling-common",
    "lint": "tslint --project tsconfig.json"
  },
  "engines": {
    "theiaPlugin": "next"
  },
  "theiaPlugin": {
    "backend": "out/extension.js"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/"
  }
}
