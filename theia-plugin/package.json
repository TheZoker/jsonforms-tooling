{
	"name": "theia-plugin",
	"publisher": "theia",
	"keywords": [
		"theia-plugin"
	],
	"version": "0.0.1",
	"license": "none",
	"files": [
		"src"
	],
	"devDependencies": {
		"@theia/plugin": "next",
        "@theia/plugin-packager": "latest",
        "rimraf": "2.6.2",
        "typescript": "2.9.2"
	},
	"scripts": {
		"prepare": "yarn run clean && yarn run build",
		"clean": "rimraf out",
		"format-code": "tsfmt -r",
		"watch": "tsc -watch",
		"compile": "tsc",
		"build": "yarn run format-code && yarn run compile && theia:plugin pack"
	},
	"engines": {
		"theiaPlugin": "next"
	},
	"theiaPlugin": {
		"backend": "out/theia-plugin-backend.js"
	}
}